<LoginServerConfig>
  <ServerName>iWoW Test Server</ServerName>
  <Address>any</Address>
  <ExternalHost>
  </ExternalHost>
  <Port>9001</Port>
  <RedirectPort>9002</RedirectPort>
  <Scripts>scripts/login/</Scripts>
  <ScriptReference>System.dll</ScriptReference>
  <ScriptReference>WoWDaemon.Common.dll</ScriptReference>
  <ScriptReference>WoWDaemon.Database.dll</ScriptReference>
  <ScriptReference>WoWDaemon.LoginServer.dll</ScriptReference>
  <WorldServer>
    <!--Use 'local' to start up a worldserver in the same process.-->
    <!--For remote server type address[:port] like 123.123.123.123:5123-->
    <Address>local</Address>
    <!--Use 'all' to set this server to handle all the worldmaps in the database.-->
    <!--Otherwise type the ids like so: 1 2 3 4 5-->
    <Worldmaps>all</Worldmaps>
  </WorldServer>
  <RealmList>
    <ClassType>WoWDaemon.Login.RealmListUpdater</ClassType>
    <Address>local</Address>
    <Password>
    </Password>
  </RealmList>
</LoginServerConfig>